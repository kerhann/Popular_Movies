<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/posterImage"
        android:src="@drawable/test"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:text="Interstellar"
        android:id="@+id/movie_title"
        android:background="#50000000"
        android:textColor="#fffffddb"
        android:gravity="center"
        android:singleLine="false"
        android:capitalize="characters"
        android:editable="false"
        android:textAllCaps="true"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="2"
        android:layout_alignBottom="@+id/posterImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="7.3"
        android:id="@+id/movie_average_vote"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#50000000"
        android:textColor="#fffffddb"
        android:gravity="center"
        android:singleLine="false"
        android:capitalize="characters"
        android:editable="false"
        android:textAllCaps="true"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="2"
        android:padding="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingStar"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/movie_average_vote"
        android:layout_toStartOf="@+id/movie_average_vote"
        android:src="@drawable/star" />


</RelativeLayout>